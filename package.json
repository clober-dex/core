{
  "name": "@clober/core",
  "version": "1.0.0",
  "description": "\\uD83C\\uDF40 Clober core Solidity contracts",
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "scripts": {
    "fork": "npx hardhat node",
    "compile": "npm run lint:fix:sol && TS_NODE_TRANSPILE_ONLY=1 SKIP_LOAD=true npx hardhat compile",
    "size-contracts": "SKIP_LOAD=true npx hardhat size-contracts",
    "coverage:hardhat": "npx hardhat coverage",
    "coverage:forge": "forge coverage --match-contract UnitTest --report lcov",
    "coverage:local": "rm -rf coverage && forge coverage --match-contract UnitTest --report lcov && genhtml lcov.info -o coverage --branch-coverage && open coverage/index.html",
    "test:hardhat": "npx hardhat test",
    "test:unit:forge": "forge test --match-contract UnitTest",
    "test:limit:forge": "forge test --match-contract LimitOrderIntegrationTest",
    "test:market:forge": "forge test --match-contract MarketOrderIntegrationTest",
    "test:claim:forge": "forge test --match-contract ClaimIntegrationTest",
    "test:cancel:forge": "forge test --match-contract CancelIntegrationTest",
    "test:gasreport": "forge test --match-contract GasReport --gas-report > gasreport.ansi",
    "precommit": "pre-commit install",
    "prettier:ts": "prettier --list-different \"{,!(node_modules)/**/}*.ts\"",
    "prettier:fix:ts": "prettier --write \"{,!(node_modules)/**/}*.ts\"",
    "lint:sol": "forge fmt --check",
    "lint:fix:sol": "forge fmt",
    "postinstall": "forge install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clober-dex/core.git"
  },
  "bugs": {
    "url": "https://github.com/clober-dex/core/issues"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts",
    "clober",
    "dex",
    "orderbook"
  ],
  "homepage": "https://clober.io/",
  "author": "Clober<official@clober.io>",
  "license": "https://license.clober.io/LICENSE.pdf",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/chalk": "^2.2.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.8.1",
    "@types/readline-sync": "^1.4.4",
    "chai": "^4.3.6",
    "chalk": "^4.1.2",
    "decimal.js": "^10.4.2",
    "dotenv": "^16.0.3",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.15",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-log-remover": "^2.0.2",
    "keythereum": "^1.2.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "prettier": "^3.2.4",
    "prettier-plugin-solidity": "^1.3.1",
    "readline-sync": "^1.4.10",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4",
    "web3": "^1.8.0"
  },
  "dependencies": {
    "@clober/library": "^1.0.0",
    "@openzeppelin/contracts": "4.7.3",
    "@wagmi/chains": "^0.2.17",
    "solidity-docgen": "^0.6.0-beta.32"
  }
}
